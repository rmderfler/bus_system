<% content_for(:title, "New line | Lines") %>
<h1><%= @line.name %></h1>

<h3>All Stations for this line</h3>
<ul>
  <%array =[]%>
  <% @line.stops.order('name').each do |stop| %>
    <% unless array.include? stop.station.name %>
      <li><%= stop.station.name %></li>
      <% if stop.time %>
        <li><%= stop.time.strftime("%H:%M") %></li>
      <% end %>
      <% array << stop.station.name %>
    <%else %>
      <% if stop.time %>
        <li><%= stop.time.strftime("%H:%M") %></li>
      <% end %>
    <% end %>
  <% end %>
</ul>

<p><%= link_to "Edit", edit_line_path(@line), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", line_path(@line),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>


